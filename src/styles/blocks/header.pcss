.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
  
.header__menu {
  width: 50%;
  @include tablets {
  display: none;
  }
}
  
.header__buttons {
  @include phones {
  display: none;
  }
}

.logo {
  font-weight: 800;
  color: $text-color;
  text-decoration: none;
  font-size: 36px;
}

.header__sandwich {
  display: none;
  @include tablets {
  display: block;
  margin-left: 20px;
}
}

.sandwich-img {
  width: 25px;
  height: 25px;
  cursor: pointer;
}