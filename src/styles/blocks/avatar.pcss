.avatar {
  display: block;
  width: 150px;
  height: 150px;
  overflow: hidden;
  border-radius: 50%;
}

.avatar__pic {
  display: block;
  object-fit: contain;
  width: 100%;
  height: 100%;
}

.avatar-img {
  display: block;
  width: 100px;
  height: 100px;
  overflow: hidden;
  border-radius: 50%;
}